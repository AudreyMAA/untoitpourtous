
<div class="d-flex align-items-center">
  <h1>Results for . . . .</h1>
    <section class="bar">
      <div class="container">
        <div class="card-body p-3">
          <div class="row">
            <div class="col-14 mb-10">
              <div class="input-group">
                <div class="form-outline flex-fill">
                  <input type="search" id="form1" class="form-control form-control-lg" />
                </div>
                <button type="button" class="btn btn-secondary">
                  <i class="fa fa-search"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
</div>

<div class="container">
  <div class="row row-cols-3">
    <% @animals.each do |animal| %>
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag animal.photo.key, crop: :fill %>
      <div class="card-body">
        <h5 class="card-title"><%= animal.name %></h5>
        <p class="card-text"><%= animal.description %></p>
        <p class="btn btn-secondary "><%= link_to 'Voir', animal_path(animal) %></p>
        <%= link_to 'X', animal_path(animal), method: :delete %>
      </div>
    </div>
    <% end %>
  </div>
</div>
