<h1>Formulaire de mise en adoption d'un animal</h1>
<div class="container">
  <%= simple_form_for [ @animal ] do |f| %>
  <%= f.input :name %>
  <%= f.input :species, collection: Animal::SPECIES %>
  <%= f.input :race %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Mettre en adoption", class: "btn btn-primary" %>
<% end %>
</div>
