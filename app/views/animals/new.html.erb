
<div class="container">
  <div class=container>
    <h1>Formulaire de mise en adoption d'un animal</h1>
  </div>
  <%= simple_form_for [ @animal ] do |f| %>
  <%= f.input :name %>
  <%= f.input :species %>
  <%= f.input :race %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Mettre en adoption", class: "btn btn-primary" %>
  <% end %>
</div>
